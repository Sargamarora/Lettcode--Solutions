class Solution {
    public int maxScore(int[] cardPoints, int k) {
        int n = cardPoints.length;
        int leftScore = 0 ;
        int rightScore = 0;
        int maxScore = 0;

        for( int i = 0 ; i<k ;i++){
            leftScore+=cardPoints[i];
        }
        maxScore = leftScore;

        int rightIndex = n-1;
        for( int i = k-1 ; i>= 0 ; i--){
            leftScore -= cardPoints[i];
            rightScore+= cardPoints[rightIndex];
            rightIndex--;
            maxScore = Math.max(leftScore+rightScore , maxScore);
        }

        return maxScore;
    }
}
